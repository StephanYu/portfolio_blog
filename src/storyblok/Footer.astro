---
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
---

<footer
  {...storyblokEditable(blok)}
  class="self-stretch-flex w-full h-full px-4 lg:px-20 gap-2 pb-4 lg:pb-20"
>
  <div
    class="bg-zinc-800 rounded-b-3xl border-neutral-900 w-full flex flex-col gap-6 pb-8"
  >
    <div
      class="flex items-center justify-end
  gap-4 pt-8 flex-col lg:flex-row mx-auto"
    >
      <div class="flex flex-row items-center justify-center gap-8">
        <a
          class="text-center text-white text-sm font-semibold leading-snug"
          href={blok.link1_url}
        >
          {blok.link1_title}
        </a>
        <a
          class="text-center text-white text-sm font-semibold leading-snug"
          href={blok.link2_url}
        >
          {blok.link2_title}
        </a>
        <a
          class="text-center text-white text-sm font-semibold leading-snug"
          href={blok.link3_url}
        >
          {blok.link3_title}
        </a>
      </div>
      <div class="flex flex-row items-center justify-center gap-8">
        <a
          class="text-center text-white text-sm font-semibold leading-snug"
          href={blok.link4_url}
        >
          {blok.link4_title}
        </a>
        <a
          class="text-center text-white text-sm font-semibold leading-snug"
          href={blok.link5_url}
        >
          {blok.link5_title}
        </a>
      </div>
    </div>
    <div
      class="inline-block text-center text-neutral-200 text-sm font-normal leading-snug mx-auto"
    >
      {blok.copyright_info}
    </div>
  </div>
</footer>
