---
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
---

<footer
  {...storyblokEditable(blok)}
  class="container mx-auto self-stretch-flex w-[375px] gap-2 pb-4"
>
  <div
    class="flex flex-col bg-zinc-800 rounded-b-3xl items-center justify-start self-stretch h-full gap-6 py-8 border-neutral-900"
  >
    <div class="flex justify-center items-center gap-8">
      <a
        class="text-center text-white text-sm font-semibold leading-snug"
        href={blok.link1_url}
      >
        {blok.link1_title}
      </a>
      <a
        class="text-center text-white text-sm font-semibold leading-snug"
        href={blok.link2_url}
      >
        {blok.link2_title}
      </a>
      <a
        class="text-center text-white text-sm font-semibold leading-snug"
        href={blok.link3_url}
      >
        {blok.link3_title}
      </a>
    </div>
    <div class="flex justify-center items-center gap-8">
      <a
        class="text-center text-white text-sm font-semibold leading-snug"
        href={blok.link4_url}
      >
        {blok.link4_title}
      </a>
      <a
        class="text-center text-white text-sm font-semibold leading-snug"
        href={blok.link5_url}
      >
        {blok.link5_title}
      </a>
    </div>

    <div
      class="text-center text-neutral-200 text-sm font-normal font-['Inter'] leading-snug"
    >
      {blok.copyright_info}
    </div>
  </div>
</footer>
