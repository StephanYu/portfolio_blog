---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<article
  {...storyblokEditable(blok)}
  class="max-w-[1280px] mx-auto lg:py-20 pb-10 pt-12 lg:px-0 bg-white flex flex-col items-center gap-2 px-4"
>
  <header class="flex flex-col items-start gap-8 lg:gap-10">
    <div
      class="text-neutral-900 text-[42px] lg:text-[84px] font-semibold font-['Inter'] leading-[34px] lg:leading-[89px]"
    >
      {blok.headline}
    </div>
    <img
      class="w-full h-[400px] object-cover rounded-[40px]"
      src={blok.image.filename}
    />
    <div
      class="w-full lg:py-20 px-4 py-16 bg-gray-100 rounded-[40px] flex justify-center items-center"
    >
      <div
        class="w-full text-neutral-900 text-[28px] lg:text-[34px]font-semibold font-['Inter'] leading-[34px] lg:leading-10"
      >
        {blok.personal_bio}
      </div>
    </div>
  </header>
</article>
